<%= form_with model: @question do |f| %>
  <div class="flex align-center justify-center flex-col gap-4">
    <div >
      <%= f.label :title %>
      <%= f.text_field :title, required: true, minlength: 2, placeholder: "Title" %>
    </div>

    <div>
      <%= f.label :body %>
      <%= f.text_area :body, required: true, minlength: 2, placeholder: "Body" %>
    </div>

  </div>
    <%= f.submit "Submit", disable_with: 'Submiting...' %>

<% end %>