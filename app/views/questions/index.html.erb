<h1 class="text-3xl pb-4">Questions</h1>

<% @questions.each do |question| %>
  <h1 class="font-bold text-3xl py-5"><%= question.title %></h1>
  <time datetime="<%= question.formatted_created_at %>" >
    <%= question.formatted_created_at %>
  </time>
  <p><%= question.body %></p>
  <%= link_to "Show", question_path(question) %>
  <%= link_to "Edit", edit_question_path(question) %>
  <%= button_to "Destroy", question_path(question), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
<% end %>